@inherits SectionTasksBase

@if (IsMemberActive || Tasks.Any())
{
	<div class="mb-6">
		@if (Tasks.Any())
		{
			<MudText Typo="Typo.h5" Class="mb-2">@Title</MudText>
			<div class="mb-4">
				@foreach (var task in Tasks)
				{
					<MudDivider DividerType="DividerType.FullWidth" Class="my-2" />
					<div class="d-flex flex-row gap-3 align-center">
						@if (IsMemberActive)
						{
							<div>
								<MudCheckBox Size="Size.Medium" Color="Color.Primary" Disabled="@DisableControls" Value="task.Completed" 
											 ValueChanged="@((bool value) => HandleTaskChecked(task, value))"></MudCheckBox>
							</div>
						}
						<div class="flex-grow-1">
							<MudText Typo="Typo.subtitle1">@task.Text</MudText>
							</div>
						</div>
				}
				<MudDivider DividerType="DividerType.FullWidth" Class="my-2" />
			</div>
		}
	</div>
}
