<MudSelect T="WorkoutSetTypes" Label="@Label" FullWidth="true" Variant="Variant.Outlined" 
		Margin="@Margin" Disabled="@Disabled" Value="@Value" ValueChanged="@ValueChanged">
	@foreach (var item in EnumUtils.GetValues<WorkoutSetTypes>())
	{
		<MudSelectItem T="WorkoutSetTypes" Value="@item">@item.Title()</MudSelectItem>
	}
</MudSelect>

@code {
	[Parameter] public string Label { get; set; } = "Set Type";
	[Parameter] public WorkoutSetTypes Value { get; set; }
	[Parameter] public bool Disabled { get; set; } = false;
	[Parameter] public EventCallback<WorkoutSetTypes> ValueChanged { get; set; }
	[Parameter] public Margin Margin { get; set; } = Margin.Normal;
}
