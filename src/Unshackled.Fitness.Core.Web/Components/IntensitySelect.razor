<MudSelect T="int" Label="@Label" FullWidth="true" Variant="Variant.Outlined" Immediate="true"
		   Margin="@Margin" Disabled="@Disabled" Value="@Value" ValueChanged="@ValueChanged">

	<MudSelectItem T="int" Value="0">--</MudSelectItem>
	@for (int i = 0; i < 10; i++)
	{
		int level = i + 1;
		<MudSelectItem T="int" Value="@level">@level</MudSelectItem>
	}
</MudSelect>

@code {
	[Parameter] public string Label { get; set; } = "Intensity";
	[Parameter] public int Value { get; set; }
	[Parameter] public bool Disabled { get; set; } = false;
	[Parameter] public EventCallback<int> ValueChanged { get; set; }
	[Parameter] public Margin Margin { get; set; } = Margin.Normal;
}
